{# "verfify.html.js" populates the /verify route #}
{% extends "base.html.j2" %}

{% block page_content %}
    <h2>
        Verify a candidate text
    </h2>

    <p>
        This process verifies whether a text has been generated with our SynthID watermark.
    </p>

    <form method="POST" action="/synthid_verify">
        <label for="text-input"><b>Enter text to verify:</b></label><br>
        <textarea id="text-input" name="text" rows="4" required></textarea><br>
        <button type="submit">Submit</button>
    </form>

    <br><br>
    {% if text %}
        <p> <b>Input text:</b> <br> {{ text }} </p>
        <p> <b>Verification result:</b> {{ result }} </p>
	{% endif %}

{% endblock %}
